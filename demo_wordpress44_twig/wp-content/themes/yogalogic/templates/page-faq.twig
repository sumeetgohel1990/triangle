{% extends "base.twig" %}
{% block content %}
    <div class="top_part">
        <div class="container">
            <div class="row">
                <div class="col-sm-9">
                    <div class="top_part_left_cont fadeInRight animated animated">
                        {#{% if post.title %}<h1 class="test">{{post.title}}</h1>{% endif %}#}
                        <div class="uline"></div>
                        <div class="faq_main_area">
                            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                                
                                {% for posts in post %}
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingOne">
                                        <h4 class="panel-title">
                                            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse{{loop.index}}"  aria-expanded="true" aria-controls="collapse{{loop.index}}">
                                                {{posts.title}}
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapse{{loop.index}}" class="panel-collapse collapse {% if loop.first %} in {% endif %} " role="tabpanel" aria-labelledby="headingOne">
                                        <div class="panel-body">
                                            {{ posts.content}}
                                        </div>
                                    </div>
                                </div>
                                   
                                {%  endfor %}
                            </div>
                        </div>

                    </div>
                </div>
                {% if sidebar %}
                    <div class="col-sm-3">
                        {{sidebar}}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}