<body class="{{body_class}}" data-template="base.twig" >
    <header class="header" >
        {% block header %}
            <div class="logo_area wow fadeInLeft animated animated">
                <div class="container">
                    <div class="logo">
                        <a href="{{site.url}}"><img src="{{site_logo}}" alt="{{site.name}}" title="{{site.name}}" class="img-responsive" /> </a>
                    </div>
                </div>
            </div>
            <div class="slider_area wow fadeInUp animated animated">
                <div id="home-slider" class="flexslider">
                    <ul class="slides">
                        {% if post.get_field('_banner_image')  %}
                        {% for image in post.get_field('_banner_image')  %}
                        <li>
                            <div class="slide-container"><img draggable="false" src="{{ image.image }}" alt="slide01" >
