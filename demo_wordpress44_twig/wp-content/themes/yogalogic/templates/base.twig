                            <div class="slide-container">
                                <img draggable="false" src="{{site.theme.uri}}/images/slide01.jpg" alt="slide01" >
                                <!--<div class="carousel-caption">
                                  <p>Free and easy team management. <span>Manage your players, games and organise your team with our easy to use team managent app.</span></p>
                                </div>-->
                            </div>
                        </li>
                        {% endif %}
                        
                    </ul>
                    <ul class="flex-direction-nav">
                        <li><a class="flex-prev" href="#">Previous</a></li>
                        <li><a class="flex-next" href="#">Next</a></li>
                    </ul>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="navi">
                <nav class="navbar navbar-default">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
