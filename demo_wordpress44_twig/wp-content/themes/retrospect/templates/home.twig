    <!-- One -->
    <section id="one" class="wrapper style1">
        <div class="inner">
            {% set counter = 1 %}
            {% for home_post in homepageposts %}
            <article class="feature {% if(counter%2!=0) %}left {% else %} right {% endif %}">
                <span class="image">
                    {% if home_post.get_thumbnail %}
                    <img src="{{home_post.thumbnail.src|resize(500,300)}}" alt="{{home_post.title}}" />
                    {% endif %}
                </span>
                <div class="content">
                    <h2>{{home_post.title}}</h2>
                    {{home_post.get_preview(20,false,'')}}
                    <ul class="actions">
                        <li>
                            <a href="{{home_post.permalink}}" class="button alt">More</a>
                        </li>
                    </ul>
                </div>
            </article>
                        {% set counter=counter+1 %}
             {%  endfor %}
        </div>
        {# pagination #}
        {#{{ dump(pagination)}}#}
        <div class="tool-pagination">
            {% if pagination.prev %}
                <a href="{{pagination.prev.link}}" class="prev {{pagination.prev.link|length ? '' : 'invisible'}}">Prev</a>
            {% endif %}
            <ul class="pages">
                {% for page in pagination.pages %}
                    <li>
                        {% if page.link %}
                            <a href="{{page.link}}" class="{{page.class}}">{{page.title}}</a>
                        {% else %}
                            <span class="{{page.class}}">{{page.title}}</span>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
            {% if pagination.next %}
                <a href="{{pagination.next.link}}" class="next {{pagination.next.link|length ? '' : 'invisible'}}">Next</a>
            {% endif %}
        </div>
        
        
    </section>

    <!-- Two -->
    <section id="two" class="wrapper special">
        <div class="inner">
            <header class="major narrow">
                <h2>Our Gallery</h2>
            </header>
            <div class="image-grid">
                {% for single_gallery in gallery %}
                {% if single_gallery.get_field('_gallery')  %}
                        {% for image in single_gallery.get_field('_gallery')  %}
                        <a href="#" class="image"><img src="{{ image.image }}" alt="" /></a>
